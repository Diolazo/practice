            android:exported="false" />
        <activity android:name=".data.ProductListActivity"
            android:exported="false" />
        <activity android:name=".data.CheckActivity"
            android:exported="false" />
        <activity
            android:name=".data.ForgotActivity"
            android:exported="false" />
        <activity
            android:name=".data.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".data.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>