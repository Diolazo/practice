<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.AboutActivity"
    android:background="@color/secondaryColor">

    <ImageView
        android:id="@+id/go_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/black_arrow_back"
        android:contentDescription="string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The UPang Bazaar App is a dedicated marketplace platform developed for the students of PHINMA University of Pangasinan. Its primary purpose is to create a convenient and secure space for students to buy, sell, and trade essential items such as textbooks, uniforms, and various services. By offering affordable alternatives, the app helps students manage the rising costs associated with their education."
            tools:ignore="HardcodedText"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textStyle="normal|italic"/>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>